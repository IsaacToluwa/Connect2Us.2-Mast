@model Connect2Us.Controllers.BookstoreDashboardViewModel
@{
    ViewBag.Title = "Bookstore Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Welcome, @Model.Bookstore.Name</h2>
            <p class="text-muted">Manage your bookstore operations</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <h3>@Model.TotalProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h3>@Model.TotalOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Orders</h5>
                    <h3>@Model.PendingOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h3>@Model.TotalRevenue.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Wallet Card -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title">Wallet Balance</h5>
                    <h3>@Model.WalletBalance.ToString("C")</h3>
                    <a href="@Url.Action("Wallet", "Bookstore")" class="btn btn-light btn-sm mt-2">
                        <i class="fas fa-wallet"></i> Manage Wallet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("CreateProduct", "Bookstore")" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add New Product
                        </a>
                        <a href="@Url.Action("Products", "Bookstore")" class="btn btn-primary">
                            <i class="fas fa-box"></i> Manage Products
                        </a>
                        <a href="@Url.Action("Orders", "Bookstore")" class="btn btn-info">
                            <i class="fas fa-orders"></i> View Orders
                        </a>
                        <a href="@Url.Action("Reports", "Bookstore")" class="btn btn-warning">
                            <i class="fas fa-chart-bar"></i> View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Orders</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.Customer.User.FirstName @order.Customer.User.LastName</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>@order.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge badge-@(order.Status.ToLower() == "pending" ? "warning" : 
                                                                                    order.Status.ToLower() == "processing" ? "info" :
                                                                                    order.Status.ToLower() == "shipped" ? "primary" :
                                                                                    order.Status.ToLower() == "delivered" ? "success" : "secondary")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("OrderDetails", "Bookstore", new { id = order.Id })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent orders found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any dashboard-specific JavaScript here
            console.log('Bookstore dashboard loaded');
        });
    </script>
}