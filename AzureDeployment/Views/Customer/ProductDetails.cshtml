@model Connect2Us.Models.Product

@{ 
    ViewBag.Title = "Product Details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bookstore.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bookstore.Name)
        </dd>

    </dl>
</div>

@using (Html.BeginForm("AddToCart", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("productId", Model.Id)
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity" value="1" min="1" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add to Cart</button>
}

<p>
    @Html.ActionLink("Back to List", "Browse")
</p>