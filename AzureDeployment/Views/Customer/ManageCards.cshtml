@model List<Connect2Us.Models.BankCard>

@{
    ViewBag.Title = "Manage Bank Cards";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>@ViewBag.Title</h2>
            <p class="text-muted">Manage your saved bank cards</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddCard")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Card
            </a>
            <a href="@Url.Action("Wallet")" class="btn btn-secondary">
                <i class="fas fa-wallet"></i> Back to Wallet
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Saved Cards</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Card Number</th>
                                        <th>Cardholder Name</th>
                                        <th>Card Type</th>
                                        <th>Expiry Date</th>
                                        <th>Status</th>
                                        <th>Added Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var card in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="card-number">@card.MaskedCardNumber</span>
                                            </td>
                                            <td>@card.CardholderName</td>
                                            <td>
                                                <span class="badge badge-info">@card.CardType</span>
                                            </td>
                                            <td>@card.ExpiryDate</td>
                                            <td>
                                                @if (card.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>@card.AddedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @using (Html.BeginForm("ToggleCardStatus", "Customer", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@card.Id" />
                                                        <button type="submit" class="btn btn-sm @(card.IsActive ? "btn-warning" : "btn-success")">
                                                            @(card.IsActive ? "Deactivate" : "Activate")
                                                        </button>
                                                    }
                                                    @using (Html.BeginForm("RemoveCard", "Customer", FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Are you sure you want to remove this card?');" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@card.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            Remove
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No cards added yet</h5>
                        <p class="text-muted">Add your first bank card to make payments easier</p>
                        <a href="@Url.Action("AddCard")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Card
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any card management specific JavaScript here
            console.log('Card management page loaded');
        });
    </script>
}