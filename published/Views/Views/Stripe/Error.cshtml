@{ 
    ViewBag.Title = "Payment Failed";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow text-center">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger fa-5x"></i>
                    </div>
                    <h2 class="text-danger mb-3">Payment Failed</h2>
                    <p class="lead mb-4">There was an error processing your payment. Please try again or contact support if the problem persists.</p>
                    
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @TempData["error"]
                        </div>
                    }
                    
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">
                            <i class="fas fa-shopping-cart"></i> Back to Cart
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>