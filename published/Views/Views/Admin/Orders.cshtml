@model Connect2Us.Models.OrdersViewModel

@{
    ViewBag.Title = "Manage Orders";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Orders", "Admin", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        @Html.Label("status", "Filter by Status:", new { @class = "control-label" })
        @Html.DropDownList("status", new SelectList(Model.Statuses, Model.SelectedStatus), "All Statuses", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("search", "Search:", new { @class = "control-label" })
        @Html.TextBox("search", Model.SearchTerm, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
}

<table class="table">
    <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Bookstore</th>
        <th>Order Date</th>
        <th>Total</th>
        <th>Status</th>
        <th></th>
    </tr>

    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Customer.User.UserName</td>
            <td>@order.Bookstore.Name</td>
            <td>@order.OrderDate.ToShortDateString()</td>
            <td>@order.TotalAmount.ToString("C")</td>
            <td>@order.Status</td>
            <td>
                @Html.ActionLink("Details", "OrderDetails", "OrderManagement", new { id = order.Id }, null)
            </td>
        </tr>
    }
</table>