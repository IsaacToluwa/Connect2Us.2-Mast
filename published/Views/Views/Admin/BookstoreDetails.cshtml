@model Connect2Us.Models.BookstoreDetailsViewModel

@{
    ViewBag.Title = "Bookstore Details";
}

<h2>@Model.Bookstore.Name</h2>

<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Owner
        </dt>

        <dd>
            @Model.Bookstore.User.UserName
        </dd>

        <dt>
            Total Products
        </dt>

        <dd>
            @Model.TotalProducts
        </dd>

        <dt>
            Total Orders
        </dt>

        <dd>
            @Model.TotalOrders
        </dd>

        <dt>
            Total Revenue
        </dt>

        <dd>
            @Model.TotalRevenue.ToString("C")
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Bookstores")
</p>