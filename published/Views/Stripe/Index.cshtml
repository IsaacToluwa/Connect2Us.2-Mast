@{
    ViewBag.Title = "Checkout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-credit-card"></i> Secure Checkout</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-shield-alt"></i>
                        <strong>Secure Payment:</strong> Your payment information is encrypted and processed securely through Stripe.
                    </div>
                    
                    <div class="mb-4">
                        <h5>Order Summary</h5>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Quantity</th>
                                        <th class="text-end">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var userId = User.Identity.GetUserId();
                                        var cart = ((Connect2Us.Models.ApplicationDbContext)ViewContext.Controller.ViewBag.DbContext ?? new Connect2Us.Models.ApplicationDbContext())
                                            .Carts.Include("CartItems.Product").SingleOrDefault(c => c.UserId == userId);
                                        
                                        if (cart != null && cart.CartItems.Any())
                                        {
                                            foreach (var item in cart.CartItems)
                                            {
                                                <tr>
                                                    <td>@item.Product.Name</td>
                                                    <td>@item.Quantity</td>
                                                    <td class="text-end">$@((item.Product.Price * item.Quantity).ToString("F2"))</td>
                                                </tr>
                                            }
                                            <tr class="table-light">
                                                <td colspan="2"><strong>Total:</strong></td>
                                                <td class="text-end"><strong>$@cart.CartItems.Sum(i => i.Product.Price * i.Quantity).ToString("F2")</strong></td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center text-muted">Your cart is empty</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (cart != null && cart.CartItems.Any())
                    {
                        <div class="text-center">
                            <a href="@Url.Action("CreateCheckoutSession", "Stripe")" class="btn btn-success btn-lg">
                                <i class="fas fa-lock"></i> Proceed to Payment
                            </a>
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-arrow-left"></i> Back to Cart
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-shopping-bag"></i> Continue Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>