@model Connect2Us.Controllers.UsersViewModel

@{ 
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)
        </th>
        <th>
            Roles
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Users) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @string.Join(", ", item.Roles.Select(r => r.RoleId))
        </td>
        <td>
            @Html.ActionLink("Details", "UserDetails", new { id=item.Id })
        </td>
    </tr>
}

</table>