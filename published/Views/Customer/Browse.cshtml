@model IEnumerable<Connect2Us.Models.Product>

@{ 
    ViewBag.Title = "Browse Products";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-3">
        <h4>Categories</h4>
        <div class="list-group">
            @Html.ActionLink("All", "Browse", "Customer", null, new { @class = "list-group-item" })
            @foreach (var category in ViewBag.Categories)
            {
                @Html.ActionLink((string)category.Name, "BrowseByCategory", "Customer", new { id = category.Id }, new { @class = "list-group-item" })
            }
        </div>
    </div>
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(ViewBag.SelectedCategory))
        {
            <h3>@ViewBag.SelectedCategory</h3>
        }
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@(item.ImageUrl ?? "https://via.placeholder.com/150")" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>Price:</strong> @item.Price.ToString("C")</p>
                            @Html.ActionLink("Details", "ProductDetails", new { id = item.Id }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>