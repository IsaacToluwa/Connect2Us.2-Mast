@model IEnumerable<Connect2Us.Models.Category>

@{
    ViewBag.Title = "Manage Categories";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Category", "CreateCategory")
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Number of Products</th>
        <th></th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Products.Count</td>
            <td>
                @Html.ActionLink("Edit", "EditCategory", new { id = category.Id })
            </td>
        </tr>
    }
</table>