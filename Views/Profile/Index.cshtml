@model Connect2Us.Models.ProfileViewModel
@{
    ViewBag.Title = "My Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">My Profile</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Phone Number</label>
                                <p class="form-control-plaintext">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "Not provided")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">First Name</label>
                                <p class="form-control-plaintext">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Last Name</label>
                                <p class="form-control-plaintext">@Model.LastName</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.DateOfBirth.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Date of Birth</label>
                            <p class="form-control-plaintext">@Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address) || !string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.State))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Address</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address<br />
                                }
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    @Model.City<text> </text>
                                }
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    @Model.State<text> </text>
                                }
                                @if (!string.IsNullOrEmpty(Model.PostalCode))
                                {
                                    @Model.PostalCode<br />
                                }
                                @if (!string.IsNullOrEmpty(Model.Country))
                                {
                                    @Model.Country
                                }
                            </p>
                        </div>
                    }

                    @if (User.IsInRole("Bookstore"))
                    {
                        <hr />
                        <h5 class="text-primary">Bookstore Information</h5>
                        
                        @if (!string.IsNullOrEmpty(Model.BookstoreName))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Bookstore Name</label>
                                <p class="form-control-plaintext">@Model.BookstoreName</p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.BookstoreDescription))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Description</label>
                                <p class="form-control-plaintext">@Model.BookstoreDescription</p>
                            </div>
                        }
                    }
                    else if (User.IsInRole("DeliveryDriver"))
                    {
                        <hr />
                        <h5 class="text-primary">Driver Information</h5>
                        
                        @if (!string.IsNullOrEmpty(Model.DriverLicenseNumber))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">License Number</label>
                                <p class="form-control-plaintext">@Model.DriverLicenseNumber</p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.VehicleType))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Vehicle Type</label>
                                <p class="form-control-plaintext">@Model.VehicleType</p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.VehicleRegistration))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Vehicle Registration</label>
                                <p class="form-control-plaintext">@Model.VehicleRegistration</p>
                            </div>
                        }
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        @Html.ActionLink("Edit Profile", "Edit", null, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Back to Dashboard", "Index", 
                            User.IsInRole("Admin") ? "Admin" : 
                            User.IsInRole("Bookstore") ? "Bookstore" : 
                            User.IsInRole("DeliveryDriver") ? "DeliveryDriver" : "Home", 
                            null, new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>