@model IEnumerable<Connect2Us.Models.Product>

@{
    ViewBag.Title = "Connect2US - Your Online Bookstore";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Search and Filter Section -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="well">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="form-group mr-3">
                    @Html.TextBox("searchTerm", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "Search books, authors, ISBN..." })
                </div>
                <div class="form-group mr-3">
                    @if (ViewBag.Categories != null && ((List<Connect2Us.Models.Category>)ViewBag.Categories).Any())
                    {
                        @Html.DropDownList("categoryId", new SelectList(ViewBag.Categories, "Id", "Name", ViewBag.CategoryId), "All Categories", new { @class = "form-control" })
                    }
                    else
                    {
                        <select name="categoryId" class="form-control" disabled>
                            <option>No categories available</option>
                        </select>
                    }
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
                if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
                {
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default">Clear</a>
                }
            }
        </div>
    </div>
</div>

<!-- Featured Section -->
@if (string.IsNullOrEmpty(ViewBag.SearchTerm as string) && ViewBag.CategoryId == null && ViewBag.CurrentPage == 1)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>Welcome to Connect2US</h1>
                <p class="lead">Discover your next favorite book from our extensive collection. Rent or buy books from local bookstores.</p>
                <p><a class="btn btn-primary btn-lg" href="#products">Browse Books</a></p>
            </div>
        </div>
    </div>
}

<!-- Products Section -->
<div id="products" class="row">
    @if (Model.Any())
    {
        foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            <strong>Author:</strong> @product.Author<br/>
                            <strong>Price:</strong> $@product.Price<br/>
                            <strong>Category:</strong> @product.Category.Name
                        </p>
                        <div class="btn-group" role="group">
                            @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("productId", product.Id)
                                @Html.Hidden("quantity", 1)
                                <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
                            }
                            @using (Html.BeginForm("AddToWishlist", "Wishlist", FormMethod.Post, new { @class = "d-inline", style = "margin-left: 5px;" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("productId", product.Id)
                                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-heart"></i> Wishlist</button>
                            }
                            @if (product.StockQuantity > 0)
                            {
                                <a href="@Url.Action("Create", "Reservations", new { productId = product.Id })" class="btn btn-sm btn-outline-success" style="margin-left: 5px;">
                                    <i class="fas fa-calendar-check"></i> Reserve
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-md-12">
            <div class="alert alert-info">
                <h4>No books found</h4>
                <p>Try adjusting your search terms or browse all categories.</p>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= (int)Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize); i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>