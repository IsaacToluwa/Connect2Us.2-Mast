{
  "version": "1.0.0",
  "name": "Connect2Us.2",
  "description": "Bookstore Management System",
  "deployment": {
    "type": "Web App",
    "framework": ".NET Framework 4.8",
    "mvc_version": "5.2.9",
    "entity_framework_version": "6.4.4"
  },
  "required_files": [
    "Web.config",
    "Global.asax",
    "bin/Connect2Us.2.dll",
    "bin/EntityFramework.dll",
    "bin/Microsoft.AspNet.Identity.*.dll",
    "bin/Microsoft.Owin.*.dll",
    "bin/Stripe.net.dll",
    "bin/System.Web.*.dll",
    "bin/Newtonsoft.Json.dll",
    "bin/WebGrease.dll",
    "bin/Antlr3.Runtime.dll",
    "bin/itextsharp.dll",
    "Content/",
    "Scripts/",
    "Views/",
    "App_Start/",
    "Controllers/",
    "Models/",
    "Infrastructure/",
    "Services/",
    "ViewModels/"
  ],
  "configuration_settings": {
    "connection_strings": [
      "DefaultConnection",
      "Connect2UsDbContext"
    ],
    "app_settings": [
      "STRIPE_PUBLISHABLE_KEY",
      "STRIPE_SECRET_KEY",
      "webpages:Version",
      "webpages:Enabled",
      "ClientValidationEnabled",
      "UnobtrusiveJavaScriptEnabled"
    ]
  },
  "deployment_notes": [
    "Ensure Azure SQL Database connection string is configured",
    "Set up Stripe API keys in Application Settings",
    "Configure email service settings if using email notifications",
    "Set up Azure Storage for file uploads if needed",
    "Configure authentication settings for production"
  ]
}