<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Connect2US</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Connect2US", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Dashboard", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Users", "Users", "UserManagement", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Bookstores", "Bookstores", "BookstoreManagement", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Categories", "Categories", "CategoryManagement", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Orders", "Orders", "OrderManagement", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Reports", "Index", "Report", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Settings", "Settings", "SettingsManagement", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Bookstore"))
                        {
                            <li>@Html.ActionLink("Dashboard", "Index", "Bookstore", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Products", "Products", "Bookstore", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Orders", "Orders", "Bookstore", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Reports", "Index", "Report", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Customer"))
                        {
                            <li>@Html.ActionLink("Browse", "Browse", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("My Orders", "MyOrders", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Reservations", "Index", "Reservations", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("DeliveryDriver"))
                        {
                            <li>@Html.ActionLink("Dashboard", "Index", "DeliveryDriver", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Available Deliveries", "AvailableDeliveries", "DeliveryDriver", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("My Deliveries", "MyDeliveries", "DeliveryDriver", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Browse", "Browse", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                
                <!-- Search Bar -->
                @if (Request.IsAuthenticated)
                {
                    <form class="d-flex me-3" action="@Url.Action("Browse", "Customer")" method="get">
                        <input class="form-control me-2" type="search" name="search" placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                }
                
                <!-- Cart and Wishlist Icons for Customers -->
                @if (Request.IsAuthenticated && User.IsInRole("Customer"))
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Wishlist")" title="Wishlist">
                                <i class="fas fa-heart"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Cart")" title="Shopping Cart">
                                <i class="fas fa-shopping-cart"></i> Cart
                                <span id="cart-count" class="badge bg-danger" style="display: none;"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Reservations")" title="Reservations">
                                <i class="fas fa-calendar-check"></i> Reservations
                            </a>
                        </li>
                    </ul>
                }
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Connect2US</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        if ('@TempData["success"]' != "") {
            toastr.success('@TempData["success"]');
        }
        if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }

        // Update cart count dynamically
        function updateCartCount() {
            $.ajax({
                url: '@Url.Action("GetCartItemCount", "Cart")',
                type: 'GET',
                success: function(data) {
                    $('#cart-count').text(data);
                    if (data > 0) {
                        $('#cart-count').show();
                    } else {
                        $('#cart-count').hide();
                    }
                },
                error: function() {
                    $('#cart-count').hide();
                }
            });
        }

        // Update wishlist count dynamically
        function updateWishlistCount() {
            $.ajax({
                url: '@Url.Action("GetWishlistItemCount", "Wishlist")',
                type: 'GET',
                success: function(data) {
                    $('#wishlist-count').text(data);
                    if (data > 0) {
                        $('#wishlist-count').show();
                    } else {
                        $('#wishlist-count').hide();
                    }
                },
                error: function() {
                    $('#wishlist-count').hide();
                }
            });
        }

        // Update reservation count dynamically
        function updateReservationCount() {
            $.ajax({
                url: '@Url.Action("GetReservationCount", "Reservations")',
                type: 'GET',
                success: function(data) {
                    $('#reservation-count').text(data);
                    if (data > 0) {
                        $('#reservation-count').show();
                    } else {
                        $('#reservation-count').hide();
                    }
                },
                error: function() {
                    $('#reservation-count').hide();
                }
            });
        }

        // Update counts on page load and after operations
        $(document).ready(function() {
            updateCartCount();
            updateWishlistCount();
            updateReservationCount();
            
            // Update counts after any form submission that might affect them
            $(document).on('submit', 'form[action*="AddToCart"]', function() {
                setTimeout(updateCartCount, 500);
            });
            
            $(document).on('submit', 'form[action*="AddToWishlist"]', function() {
                setTimeout(updateWishlistCount, 500);
            });
            
            $(document).on('submit', 'form[action*="RemoveFromWishlist"]', function() {
                setTimeout(updateWishlistCount, 500);
            });
            
            $(document).on('submit', 'form[action*="Cancel"]', function() {
                setTimeout(updateReservationCount, 500);
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
