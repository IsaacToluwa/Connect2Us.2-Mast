@model Connect2Us.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Forgot Password</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Send Reset Link</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Remember your password? 
                        @Html.ActionLink("Login here", "Login", "Account", null, new { @class = "text-decoration-none" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}